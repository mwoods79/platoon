<h1>Listing players for HTML</h1>

<table>
  <tr>
    <th>Gamertag</th>
    <th>Service tag</th>
    <th>Games total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.gamertag %></td>
    <td><%= player.service_tag %></td>
    <td><%= player.games_total %></td>
    <td><%= link_to 'Show', player, :class => 'slide' %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

